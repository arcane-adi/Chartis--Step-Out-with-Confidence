<!-- edit_text_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="@android:color/white" /> <!-- Background color -->
    <corners android:radius="8dp" /> <!-- Rounded corners -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" /> <!-- Padding to add space between text and border -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" /> <!-- Border color and width -->
</shape>
